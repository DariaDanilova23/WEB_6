  %title Danilova Daria's website
  %link{:href => "contact_scss.css", :rel => "stylesheet"}/
%body{:bgcolor => "#000000"}
  %h1{:align => "center"} Danilova Daria's website
  %aside
    .connect{:type => "button"} &#9742;
  .popup-container
    .popup-form
      .popup
        %button.close &#10006; 
        %h3 I would call you back, if I were a millennial
  %nav
    %ul
      %li
        %a{:href => ""} Main page
      %li
        %a{:href => ""} About me
      %li
        %a{:href => ""} My hobbies
      %li
        %a{:href => ""} Study
      %li
        %a{:href => ""} Photoalbum
      %li.on
        %a{:href => ""} Contancts
      %li
        %a{:href => ""} Test
      %li
        %a{:href => ""} History
  %form.form_class{:action => "mailto:danilowa.daria2010@mail.ru", :align => "center", :method => "post", :name => "contact_form"}
    %div
      %label{:for => "fio"} FIO
      %input#fio{:name => "contact_name", :onkeyup => "checkParams()", :pattern => "^[a-zA-Z]+$", :type => "text"}/
    .error_fio Fill in the field
    %br/
    %div
      %label
        Gender:
        %br/
      = succeed "Female" do
        %input{:name => "POL", :required => "", :type => "RADIO", :value => "Female"}/
      = succeed "Male" do
        %input{:name => "POL", :required => "", :type => "RADIO", :value => "Male"}/
      = succeed "Other" do
        %input{:name => "POL", :required => "", :type => "RADIO", :value => "Other"}/
    %br/
    %div{:align => "center"}
      %label Date of Birth :
      .calendar
        .date
          %select.month
            %optgroup{:label => "Month"}
              %option January
              %option February
              %option March
              %option April
              %option May
              %option June
              %option July
              %option August
              %option September
              %option October
              %option November
              %option December
          %select.year
            %optgroup{:label => "Year"}
        %table
          %tbody
            %tr
              %th SUN
              %th MON
              %th TUE
              %th WED
              %th THU
              %th FRI
              %th SAT
            %tr.calendar-day
            %tr.calendar-day
            %tr.calendar-day
            %tr.calendar-day
            %tr.calendar-day
      %br/
      %div
        %label{:for => "email"} Email
        %input#email{:name => "Email", :onkeyup => "checkParams()", :required => "", :type => "email"}/
      .error_email Fill in the field
      %br/
      %div
        %label{:for => "phone"} Phone number
        %input#phone{:name => "phone", :onkeyup => "checkParams()", :required => "", :type => "text"}/
      .error_tele Fill in the field
      %br/
      %div
        %label{:for => "letter"} Review
        %br/
        %textarea#letter{:cols => "50", :name => "Review", :rows => "10"}
        .error_letter Fill in the field
      %button{:type => "reset"} Reset
      %button#submit{:disabled => "disabled", :type => "submit"} Send
      %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"}
      %script{:src => "popup.js", :type => "text/javascript"}
      %script{:src => "contact.js", :type => "text/javascript"}
      %script{:src => "calendar.js", :type => "text/javascript"}